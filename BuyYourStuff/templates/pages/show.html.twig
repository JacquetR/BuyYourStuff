{% extends "base.html.twig" %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div style="margin: 140px"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h1>{{ product.namep }}</h1>
                <p>{{ product.description }}</p>
                <h2 class="text-primary">{{ product.price }} â‚¬</h2>
                <div style="margin: 20px"></div>
                <div class="row">
                    <div class="col-md-6">
                        <a href="{{ path('panier.save', {id: product.id}) }}" class="btn btn-primary">
                            Acheter
                            <img src="https://image.flaticon.com/icons/png/512/126/126083.png" alt="panier" style="height: 30px; width: 30px;">
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('product.edit', {id: product.id}) }}" class="btn btn-secondary">Editer produit</a>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <img src="{{ product.image }}" alt="image produit" style="max-height: 300px;">
            </div>
        </div>
        <div style="margin: 70px;"></div>
        <div class="row">
            <form action="{{ path('product.avis', {id: product.id}) }}" method="post" style="width: 100%">
                <input name="commentaire" type="text" placeholder="Laissez votre avis.." style="width: 100%; border: solid 1px black; border-radius: 5px; padding: 8px;"/>
                <input type="submit" value="Envoyer" class="btn btn-primary" style="margin-top: 15px"/>
            </form>
        </div>
        <div style="margin: 60px"></div>
        {% for avi in avis %}
            <div class="row">
                <div style="width: 60%; border: solid 1px grey; border-radius: 5px; padding: 10px; margin-bottom: 20px;">
                    <h5>{{ avi.Auteur }}</h5>
                    <p>{{ avi.Date }}</p>
                    <p>{{ avi.Texte }}</p>
                </div>
            </div>
        {% endfor %}
        <div style="margin: 50px"></div>
    </div>
{% endblock %}