{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" style="height: 100vh; background-color: #007bff; text-align: -webkit-center; padding-top: 20px;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

	<div style="background-color: white; max-width: max-content; min-width: 450px; padding: 10px; border-radius: 20px;">
		{% if app.user %}
			<div class="mb-3">
				<label>You are already logged in as {{ app.user.username }}, do you want to <a href="{{ path('app_logout') }}">Logout</a> ?</lable>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		<label for="inputEmail">Email</label>
		<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" style="width:350px;" required autofocus>
		<label for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" style="width:350px; margin-bottom:20px;" required>

		<input type="hidden" name="_csrf_token"
				value="{{ csrf_token('authenticate') }}"
		>

		{#
			Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			See https://symfony.com/doc/current/security/remember_me.html

			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me"> Remember me
				</label>
			</div>
		#}

		<button class="btn btn-lg btn-primary" style="margin-bottom: 20px; display: block;" type="submit">
			Sign in
		</button>

		<lable>No account yet ? <a href="{{ path('app_register') }}">Register here.</a></lable>
	</div>
</form>
{% endblock %}
